<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/global.css">
  <link rel="stylesheet" href="/styles/pages/dashboard/index.css">
  <link rel="stylesheet" href="/styles/pages/dashboard/list.css">
  <link rel="stylesheet" href="/styles/components/button.css">
  <title>Tasks App - List</title>
</head>

<body>
  <main class="dashboard">
    <%- include('../../partials/menu'); %>
      <section class="dashboard__profiles">
        <% tasks.forEach(function(task) { %>
          <div class="dashboard__profiles__card" id="<%=task.id%>">
            <main class="dashboard__profiles__card__content">
              <strong>
                Nome da atividade: <%=task.name%>
              </strong>
              <p>
                Status da atividade: <span class="<%=task.status%>"><%=task.status === 'scheduled' ? 'agendada' : 'concluÃ­da'%></span>
              </p>
            </main>
            <svg class="dashboard__profiles__card__icon dashboard__profiles__card__icon--remove-icon" style="width:24px;height:24px" viewBox="0 0 24 24" alt="Remover" >
              <path fill="#e60505" d="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z" />
            </svg>
            <svg class="dashboard__profiles__card__icon dashboard__profiles__card__icon--edit-icon" style="width:24px;height:24px" viewBox="0 0 24 24" alt="Editar">
              <path fill="#4646bb" d="M14.06,9L15,9.94L5.92,19H5V18.08L14.06,9M17.66,3C17.41,3 17.15,3.1 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18.17,3.09 17.92,3 17.66,3M14.06,6.19L3,17.25V21H6.75L17.81,9.94L14.06,6.19Z" />
            </svg>
          </div>
          <% }); %>
      </section>
  </main>
  <footer></footer>

  <script src="/scripts/index.js"></script>
</body>

</html>